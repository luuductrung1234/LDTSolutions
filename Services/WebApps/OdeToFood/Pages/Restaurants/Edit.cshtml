@page
@model OdeToFood.Pages.Restaurants.EditModel
@{
   ViewData["Title"] = "Edit";
}

<h2>Edit @Model.Restaurant.Name</h2>
<form method="post">
   <input type="hidden" asp-for="Restaurant.Id" />
   <div class="form-group">
      <label asp-for="Restaurant.Name"></label>
      <input class="form-control" type="text" asp-for="Restaurant.Name" placeholder="Restaurant Name"/>
   </div>
   <div class="form-group">
      <label asp-for="Restaurant.Location"></label>
      <input class="form-control" type="text" asp-for="Restaurant.Location" placeholder="Restaurant Location"/>
   </div>
   <div class="form-group">
      <div class="input-group">
         <div class="input-group-prepend">
            <label class="input-group-text" asp-for="Restaurant.CuisineType"></label>
         </div>
         <select class="custom-select"
                 asp-for="Restaurant.CuisineType"
                 asp-items="Model.Cuisines"></select>
      </div>
   </div>
   <button type="submit" class="btn btn-primary">Save</button>
</form>
